{
  "name": "gemini-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "format": "pnpm format:frontend && pnpm format:tauri",
    "format:frontend": "pnpm dlx prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "format:tauri": "cd ../crates/backend && cargo fmt",
    "lint": "pnpm lint:frontend && pnpm lint:tauri",
    "lint:frontend": "pnpm dlx eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:tauri": "cd ../crates/backend && cargo clippy -- -D warnings",
    "lint:tauri:warnings": "cd ../crates/backend && cargo clippy",
    "check": "pnpm check:frontend && pnpm check:tauri",
    "check:frontend": "tsc --noEmit",
    "check:tauri": "cd ../crates/backend && cargo check",
    "test": "pnpm test:backend",
    "test:backend": "cd ../crates/backend && cargo nextest run --lib --test-threads=1",
    "test:backend:projects": "cd ../crates/backend && cargo nextest run --lib projects::tests:: --test-threads=1",
    "test:backend:search": "cd ../crates/backend && cargo nextest run --lib search::tests:: --test-threads=1",
    "test:backend:concurrent": "cd ../crates/backend && cargo nextest run --lib",
    "test:backend:verbose": "cd ../crates/backend && cargo nextest run --lib --test-threads=1 --verbose",
    "test:backend:fallback": "cd ../crates/backend && cargo test --lib -- --test-threads=1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.3.2",
    "@tauri-apps/plugin-opener": "^2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hast-util-to-jsx-runtime": "^2.3.6",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.22",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-mentions": "^4.4.10",
    "react-router-dom": "^7.7.1",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "shiki": "^3.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tm-themes": "^1.10.7",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tauri-apps/cli": "^2",
    "@types/node": "^24.0.13",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
